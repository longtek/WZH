<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	 android:gravity="center|left|top" 
 	 android:layout_gravity="center_horizontal" 
 	 android:orientation="vertical" 
 	 android:padding="10.0dip" 
 	 android:scrollbars="vertical" 
 	 android:layout_width="fill_parent" 
 	 android:layout_height="fill_parent">
 	 
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/imagelogoAbout"
            android:layout_width="280.0dip"
            android:layout_height="80.0dip"
            android:src="@drawable/logo_soundcreator"
            android:scaleType="fitEnd"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
	
    <Space 
        android:layout_width="fill_parent"
        android:layout_height="40.0dip" />
    <Button 
        android:layout_gravity="center_horizontal" 
        android:id="@+id/ButtonConnect"
        android:padding="20.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ConnectToSoundCreator" />
    <Space 
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"/>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/TextNBox"	
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageButton 
            android:id="@+id/ButtonPrevious"
            android:background="@color/blue"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_margin="10.0dip"
            android:src="@drawable/previous"
            android:layout_toLeftOf="@id/ButtonSearch" />
        <ImageButton 
            android:id="@+id/ButtonSearch"
            android:background="@color/blue"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_margin="10.0dip"
            android:src="@drawable/boxsettings"
            android:layout_centerHorizontal="true" />
        <ImageButton 
            android:id="@+id/ButtonNext"
            android:background="@color/blue"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_margin="10.0dip"
            android:src="@drawable/next"
            android:layout_toRightOf="@id/ButtonSearch" />
    </RelativeLayout>
    
    <Space 
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"/>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/TextVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ProgressBar 
            android:id="@+id/ProgressBarVolume"
            android:layout_width="150.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:max="100"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/CustomProgressBarHorizontal" />
        <Button 
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/ButtonMoins"
            android:background="@color/blue"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_margin="5.0dip"
            android:text="-"
            android:textSize="20dp"
            android:layout_toLeftOf="@id/ProgressBarVolume"
            android:layout_centerVertical="true" />
        <Button 
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/ButtonPlus"
            android:background="@color/blue"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_margin="5.0dip"
            android:text="+"
            android:textSize="20dp"
            android:layout_toRightOf="@id/ProgressBarVolume"
            android:layout_centerVertical="true" />
        <ImageButton 
            android:id="@+id/ButtonVolume"
            android:background="@color/blue"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_margin="10.0dip"
            android:src="@drawable/volumeon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <TextView 
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/TextDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />"
    </RelativeLayout>
</LinearLayout>